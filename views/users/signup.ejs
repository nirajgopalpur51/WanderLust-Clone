<% layout("/layouts/boilerplate.ejs") -%>

<div class="row mt-3">
    <h1 class="col-6 offset-3">SignUP on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation"
            novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input
                    name="username"
                    id="username"
                    class="form-control"
                    type="text"
                    required />
                <div class="valid-feedback">Looks good</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input
                    name="email"
                    id="email"
                    class="form-control"
                    type="email"
                    required />
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input
                    name="password"
                    id="password"
                    class="form-control"
                    type="password"
                    required />
            </div>

            <button class="btn btn-success">
                SignUp
            </button>
        </form>
    </div>
</div>